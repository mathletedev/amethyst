{
	"compilerOptions": {
		"baseUrl": "src",
		"esModuleInterop": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "dist",
		"removeComments": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "es6",
		"typeRoots": ["src/types"]
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
